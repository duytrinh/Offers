<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rlOffer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitleOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="" />

        <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvTitleOffer" >

            <ImageView
                android:id="@+id/imOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/check_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imOffer"
                android:layout_alignRight="@+id/imOffer" 
                android:alpha=".50" />
            
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDateOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rlImage"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/tvDetailOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvDateOffer"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/tvTypeOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvDetailOffer"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/tvUsedOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvTypeOffer"
            android:layout_marginTop="10dp"
            android:text="" />

        <ImageView
            android:id="@+id/imSuccessOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsedOffer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ProgressBar
            android:id="@+id/pbOffer"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" >
        </ProgressBar>

        <LinearLayout
            android:id="@+id/stamp_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imSuccessOffer"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</ScrollView>